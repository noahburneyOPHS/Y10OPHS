SUBPROGRAM CHALLENGE 3:

def player1Game():
    print("1-Player has been chosen")

def player2Game():
    print("2-Player has been chosen")

def online():
    print("Online has been chosen")

def Exit():
    print("exiting ...")

def menu():
    print("press 1 for 1-Player")
    print("press 2 for 2-Player")
    print("press 3 for Online")
    print("press 4 to exit")

    userInput = int(input("Enter 1, 2, 3 or 4 >>>"))

    if userInput == 1:
        player1Game()
    elif userInput == 2:
        player2Game()
    elif userInput == 3:
        online()
    elif userInput == 4:
        Exit()
    else:
        print("")
        print("Invalid, Must choose 1, 2 ,3 or 4")
        menu()

menu()


SUBPROGRAM CHALLENGE 4:

def creative():
    print("Creative selected")
def survival():
    print("Survival selected")
def hardcore():
    print("Hardcore selected")
def adventure():
    print("Adventure selected")
def exiting():
    print("Exiting ...")

def menu():
    print("press 1 for Creative")
    print("press 2 for Survival")
    print("press 3 for Hardcore")
    print("press 4 for Adventure")
    print("press 5 to Exit")

    userInput = int(input("Press 1, 2, 3, 4 or 5 >>>"))

    if userInput == 1:
        creative()
    elif userInput == 2:
        survival()
    elif userInput == 3:
        hardcore()
    elif userInput == 4:
        adventure()
    elif userInput == 5:
        exiting()
    else:
        print("")
        print("INVALID CHOICE")
        print("")
        menu()

menu()
