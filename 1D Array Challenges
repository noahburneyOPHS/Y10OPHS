1D Array Challenge 1

cars = []
cars.append(input("Enter the name of a car brand >>>"))
cars.append(input("Enter the name of a different car brand >>>"))
cars.append(input("Enter the name of a different car brand >>>"))
print(cars)

Challenge 2

cars = []

a = True

while a == True:
    b = str(input("input a car brand or press x to exit >>>"))
    if b == ("x"):
        print("in the list is", (cars))

        print("exiting...")
        a = False
    
    if b != ("x"):
        cars.append(b)
        

Challenge 3

people = []

people.append(input("Enter a name >>>"))
people.append(input("Enter a different name >>>"))
people.append(input("Enter a different name >>>"))

a = True

while a == True:
    b = str(input("Would you like to add another name >>>"))
    if b == ("yes"):
        people.append(input("Enter a different name >>>"))
        
        

    if b == ("no"):
        a = False
        print(len(people))
