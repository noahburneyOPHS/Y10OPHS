WHILE LOOP CHALLENGE 1

total = 0
while total <= 50:
    number = int(input("Enter a number >>>"))
    total = total + number
    print("The total is", total)
    if total > 50:
        print(total, "is over 50")
        
WHILE LOOP CHALLENGE 2

number = 0

import sys

while number < 5:
    total = int(input("Enter a number >>>"))
    if total > 5:
        print("The last number you entered was a", total)
        exit(sys)

